# Dionysus 2.0 System Configuration
# =================================
# IMPORTANT: Copy this file to .env and update with your actual credentials
# .env is gitignored and will never be committed
# All agents should read credentials from .env file

# Environment
ENVIRONMENT=development

# =================================
# DATABASE CREDENTIALS
# =================================

# Neo4j - Primary Knowledge Graph Database (REQUIRED for document processing)
# Default Docker Compose: bolt://localhost:7687
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# Redis - Caching and ThoughtSeed State (REQUIRED for consciousness processing)
# Default Docker Compose: localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB - Legacy database (optional, for migration only)
LEGACY_MONGO_URI=mongodb://localhost:27017
LEGACY_MONGO_DATABASE=dionysus_legacy

# PostgreSQL - Structured data (optional, future use)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DATABASE=dionysus

# Qdrant - Vector database (DEPRECATED - using Neo4j vector indexes instead)
# QDRANT_URL=http://localhost:6333

# =================================
# FRAMEWORK CONFIGURATION
# =================================

# ThoughtSeed - Consciousness Processing System
THOUGHTSEED_ENABLED=true
THOUGHTSEED_CONFIG_PATH=./thoughtseed.yaml

# Daedalus - Perceptual Information Gateway (LangGraph-based)
DAEDALUS_ENABLED=true
DAEDALUS_AGENT_POOL_SIZE=5
DAEDALUS_CONTEXT_ISOLATION=true

# LangGraph - Workflow Coordination
LANGGRAPH_ENABLED=true
LANGGRAPH_REDIS_URL=redis://localhost:6379/1

# Chimera - Consciousness Integration
CHIMERA_ENABLED=true
CHIMERA_CONSCIOUSNESS_THRESHOLD=0.7

# =================================
# MIGRATION CONFIGURATION
# =================================

MIGRATION_QUALITY_THRESHOLD=0.7
CONSCIOUSNESS_WEIGHT=0.7
STRATEGIC_WEIGHT=0.3

ZERO_DOWNTIME_REQUIRED=true
ROLLBACK_TIMEOUT_SECONDS=30

MAX_CONCURRENT_MIGRATIONS=3
COMPONENT_ANALYSIS_TIMEOUT=300

LEGACY_CODEBASE_PATH=./legacy/dionysus

# =================================
# API CONFIGURATION
# =================================

API_HOST=localhost
API_PORT=8080
API_DEBUG=false
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

SECRET_KEY=consciousness-migration-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================================
# LOGGING CONFIGURATION
# =================================

LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE_PATH=./logs/migration.log

LOG_CONSCIOUSNESS_METRICS=true
LOG_AGENT_COORDINATION=true

# =================================
# EXTERNAL API KEYS (if needed)
# =================================

# OpenAI API (for LLM features)
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for Claude features)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hugging Face (for model downloads)
# HUGGINGFACE_TOKEN=your_huggingface_token_here
