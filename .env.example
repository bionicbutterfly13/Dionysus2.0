# Flux Environment Variables Configuration
# Copy this file to .env and update values for your environment

# Application Settings
FLUX_ENV=development
DEBUG=true

# Flux Server Configuration (Unique Odd Ports - Less Conflicts)
HOST=127.0.0.1
PORT=9127

# Flux Port Allocation (Unique Odd Ports)
FLUX_BACKEND_PORT=9127
FLUX_FRONTEND_PORT=9243
FLUX_WEBSOCKET_PORT=9129
FLUX_HEALTH_PORT=9131

# Database Connections
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=flux

QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=flux_embeddings

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Local Inference
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TIMEOUT=30

# Sentence Transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ThoughtSeed Settings
THOUGHTSEED_ENABLE=true
CONSCIOUSNESS_DETECTION=true
ATTRACTOR_BASINS_ENABLE=true

# Curiosity Engine
CURIOSITY_ENABLE=true
NIGHTLY_REPLAY_ENABLE=true
NIGHTLY_REPLAY_HOUR=2

# Constitutional Compliance
MOCK_DATA_TRANSPARENCY=true
EVALUATION_MANDATORY=true
LOCAL_FIRST_ENFORCE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/flux.log

# Security (for local auth)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development Features
AUTO_RELOAD=true
DEBUG_WEBSOCKETS=true
ALLOW_MOCK_DATA=true